                <Label Grid.Row="0" Content="Авторизация" Margin="30,5,30,5" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="45"/>
                <TextBox x:Name="LoginTextbox" Grid.Row="1" Style="{StaticResource LoginTextBoxes}" Template="{StaticResource LoginTextBoxesBorder}"/>
                <PasswordBox x:Name="PasswordTextbox" Grid.Row="2" Style="{StaticResource PasswordboxStyle}" Template="{StaticResource PasswordboxBorder}" />
                <Button x:Name="LoginButton" Grid.Row="3" Content="Войти" Margin="60,5,60,5" FontSize="35" Click="LoginButton_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Grid>
        <Grid x:Name="LoadindGrid" Background="White" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="Загрузка..." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="60"/>
                <Image Grid.Row="1" gif:ImageBehavior.AnimatedSource="img/loading.gif"/>
            </Grid>
        </Grid>
        <Grid x:Name="ApartInfoGrid" Background="#BFFFFFFF" Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border BorderBrush="Black" BorderThickness="2"  Grid.Row="1" Grid.Column="1" CornerRadius="5">
                <Grid Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="ApartInfoLabel" Content="Информация о номере №" Grid.ColumnSpan="4" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="32"/>
                    <StackPanel Grid.Row="1" Grid.Column="1">
                        <TextBox Text="Количество комнат" IsEnabled="False" Style="{StaticResource ForApartInfoLeftTextboxes}"/>
                        <TextBox Text="Тип номера" IsEnabled="False" Style="{StaticResource ForApartInfoLeftTextboxes}"/>
                        <TextBox Text="Время уборки" IsEnabled="False" Style="{StaticResource ForApartInfoLeftTextboxes}"/>
                        <TextBox Text="Цена" IsEnabled="False" Style="{StaticResource ForApartInfoLeftTextboxes}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="2">
                        <TextBox x:Name="ApartInfoRoomsTextBox" IsReadOnly="True" Style="{StaticResource ForApartInfoRightTextboxes}"/>
                        <TextBox x:Name="ApartInfoTypeTextBox" IsReadOnly="True" Style="{StaticResource ForApartInfoRightTextboxes}"/>
                        <TextBox x:Name="ApartInfoTimeTextBox" IsReadOnly="True" Style="{StaticResource ForApartInfoRightTextboxes}"/>
                        <TextBox x:Name="ApartInfoCostTextBox" IsReadOnly="True" Style="{StaticResource ForApartInfoRightTextboxes}"/>
                    </StackPanel>
                    <Button x:Name="ApartInfoCloseBtn" Content="Закрыть" Grid.Row="2" Grid.Column="3" Margin="5,20,5,20" Style="{StaticResource ForDeleteBtn}" Click="ApartInfoCloseBtn_Click"/>
                </Grid>
            </Border>
        </Grid>
        <Grid x:Name="OfferInfoGrid" Background="#BFFFFFFF" Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border BorderBrush="Black" BorderThickness="2"  Grid.Row="1" Grid.Column="1" CornerRadius="5">
                <Grid Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="OrderInfoLabel" Content="Информация о Заказе №" Grid.ColumnSpan="4" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="32"/>
                    <StackPanel Grid.Row="1" Grid.Column="1">
                        <TextBox Text="Количество дней" IsEnabled="False" Style="{StaticResource ForApartInfoLeftTextboxes}"/>
                        <TextBox Text="Номер паспорта клиента" IsEnabled="False" Style="{StaticResource ForApartInfoLeftTextboxes}"/>
                        <TextBox Text="Номера в заказе" IsEnabled="False" Style="{StaticResource ForApartInfoLeftTextboxes}"/>
                        <TextBox Text="Сумма заказа" IsEnabled="False" Style="{StaticResource ForApartInfoLeftTextboxes}"/>
                        <TextBox Text="Дата начала заказа" IsEnabled="False" Style="{StaticResource ForApartInfoLeftTextboxes}"/>
                        <TextBox Text="Дата регистрации заказа" IsEnabled="False" Style="{StaticResource ForApartInfoLeftTextboxes}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="2">
                        <TextBox x:Name="OrderInfoDays" IsReadOnly="True" Style="{StaticResource ForApartInfoRightTextboxes}"/>
                        <TextBox x:Name="OrderInfoPasswordNumber" IsReadOnly="True" Style="{StaticResource ForApartInfoRightTextboxes}"/>
                        <TextBox x:Name="OrderInfoApartListNumber" IsReadOnly="True" Style="{StaticResource ForApartInfoRightTextboxes}"/>
                        <TextBox x:Name="OrderInfoPrice" IsReadOnly="True" Style="{StaticResource ForApartInfoRightTextboxes}"/>
                        <TextBox x:Name="OrderInfoStartDay" IsReadOnly="True" Style="{StaticResource ForApartInfoRightTextboxes}"/>
                        <TextBox x:Name="OrderInfoRegisterDateTime" IsReadOnly="True" Style="{StaticResource ForApartInfoRightTextboxes}"/>
                    </StackPanel>
                    <Button x:Name="OrderInfoCloseBtn" Content="Закрыть" Grid.Row="2" Grid.Column="3" Margin="5,20,5,20" Style="{StaticResource ForDeleteBtn}" Click="OrderInfoCloseBtn_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
